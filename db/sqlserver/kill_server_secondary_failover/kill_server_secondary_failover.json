{
    "version": "1.0.0",
    "title": "SQL Server failover and restart experiment",
    "description": "Verifies that a SQL Server master fails over to a secondary node.",
    "tags": [
        "type:sqlserver",
        "platform:db",
        "service:io"
    ],
    "configuration": {
        "server": {
            "type": "env",
            "key": "SERVER"
        },
        "listenername": {
            "type": "env",
            "key": "LISTENER_NAME"
        },
        "port": {
            "type": "env",
            "key": "PORT"
        }
    },
    "contributions": {
        "availability": "high",
        "reliability": "high",
        "security": "none"
    },
    "steady-state-hypothesis": {
        "title": "Listener is online",
        "probes": [
            {
                "type": "probe",
                "name": "listener-is-online",
                "tolerance": 0,
                "provider": {
                    "type": "process",
                    "path": "./listener_is_online.ps1",
                    "arguments": [
                        "-Server ${server}",
                        "-ListenerName ${listenername}",
                        "-Port ${port}"
                    ]
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "kill-sqlserver-service",
            "provider": {
                "type": "process",
                "path": "./force_kill_sqlserver_service.ps1",
                "arguments": "-Server ${server}"
            }
        }
    ],
    "rollbacks": [
        {
            "type": "action",
            "name": "restore-sqlserver-service",
            "provider": {
                "type": "process",
                "path": "./start_sqlserver_service.ps1",
                "arguments": "-Server ${server}"
            }
        }
    ]
}
