{
    "version": "1.0.0",
    "title": "My application is resilient to random node deletion",
    "description": "Can my application maintain its minimum resources in the event of random node being deleted?",
    "tags": [
        "platform:kubernetes",
        "service:node"
    ],
    "configuration": {
        "service_url": {
            "type": "env",
            "key": "APPLICATION_ENTRYPOINT_URL"
        },
        "pod_label_selector": {
            "type": "env",
            "key": "POD_LABEL"
        },
        "node_name": {
            "type": "env",
            "key": "NODE_NAME"
        }
    },
    "contributions": {
        "availability": "high",
        "reliability": "high",
        "safety": "none",
        "security": "none",
        "performability": "medium"
    },
    "steady-state-hypothesis": {
        "title": "Application is normal",
        "probes": [
            {
                "type": "probe",
                "name": "application-must-respond-normally",
                "tolerance": 200,
                "provider": {
                    "type": "http",
                    "url": "${service_url}",
                    "timeout": 3
                }
            }
        ]
    },
    "method": [
        {
            "type": "action",
            "name": "delete_node",
            "provider": {
                "type": "python",
                "module": "chaosk8s.node.actions",
                "func": "drain_nodes",
                "arguments": {
                    "name": "${node_name}",
                    "random": "True"
                }
            }
        }
    ]
}
